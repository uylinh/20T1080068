@model _20T1080068.DomainModels.Order
@{
    ViewBag.Title = "Xoá đơn hàng";
}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal">

            <div class="form-group">
                <label class="control-label col-sm-2"> Mã khách hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.CustomerID</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thời gian đặt hàng :</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.OrderTime</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2"> Mã nhân viên :</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.EmployeeID</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2"> Thời gian nhận đơn hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.AcceptTime </p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mã người giao hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ShipperID</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thời gian giao hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ShippedTime</p>
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-sm-2"> Thời gian hoàn thành:</label>
                <div class="col-sm-10">
                    <p class="form-control-static"> @Model.FinishedTime </p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2"> Trạng Thái:</label>
                <div class="col-sm-10">
                    <p class="form-control-static"> @Model.StatusDescription </p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10 text-right">

                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash" style="margin-right: 2px;"></i> Xoá dữ liệu
                    </button>

                    <a href="~/Order" class="btn btn-default">
                        Quay lại
                    </a>

                </div>
            </div>
        </form>
    </div>
</div>


