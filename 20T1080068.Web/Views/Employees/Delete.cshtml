@model _20T1080068.DomainModels.Employees
@{
}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Employees/Delete/@Model.EmployeeID" method="post">

            <div class="form-group">
                <label class="control-label col-sm-2">Họ và tên đệm:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.FirstName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Tên nhân viên:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.LastName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ngày tháng năm sinh:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@string.Format("{0:dd/MM/yyyy}", Model.BirthDate)</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh nhân viên:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">
                        <img class="img-responsive img-rounded"
                             style="object-fit: contain; object-position: center;"
                             src="~/@Model.Photo" width="200" height="180" />
                    </p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ email:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Email</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ghi chú:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Notes</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10 text-right">

                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash" style="margin-right: 2px;"></i> Xoá dữ liệu
                    </button>

                    <a href="~/Employees" class="btn btn-default">
                        Quay lại
                    </a>

                </div>
            </div>
        </form>
    </div>
</div>