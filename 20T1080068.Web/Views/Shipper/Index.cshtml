
@model IEnumerable<_20T1080068.DomainModels.Shipper>
@{
    ViewBag.Title = "Quản lý Giao hàng";
}
<body>
<div class="box-box-primary">
    <div class="box-body">

        <form action="~/Shipper">
            <div class="input-group">
                <input type="text" name="searchValue" class="form-control" placeholder="Search" value="@ViewBag.SearchValue" autofocus>
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <i class="glyphicon glyphicon-search"></i> Tìm kiếm
                    </button>
                    <a href="~/Shipper/Create" class="btn btn-primary" style="margin-left:5px">
                        <i class="fa fa-plus"></i> Bổ sung
                    </a>
                </div>
            </div>


        </form>

        <p style="margin-top:10px">
            Có <strong>@ViewBag.RowCount</strong> Người giao hàng trong tổng số <strong>@ViewBag.PageCount</strong> trang.
        </p>
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr class="bg-primary">
                        <th>Mã nhân viên giao hàng</th>
                        <th>Tên nhân viên giao hàng</th>
                        <th>Số điện thoại </th>

                    </tr>
                </thead>
                <tbody>
                    @* phải khai báo tổng quát model *@

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ShipperID</td>
                            <td>@item.ShipperName</td>
                            <td>@item.Phone</td>

                            <td class="text-left">

                                <a class="btn btn-xs btn-primary" data-toggle="modal" data-target="#editShipperModal">
                                    <i class="fa fa-edit"></i>
                                </a>
                               

                                <a class="btn btn-xs btn-danger" data-toggle="modal" data-target="#deleteShipperModal">
                                    <i class="fa fa-trash"></i>
                                </a>
                               
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="text-center">
            <ul class="pagination">
                @for (int i = 1; i <= ViewBag.PageCount; i++)
                {
                    if (i == ViewBag.Page)
                    {
                        <li class="active"><a href="#">@i</a></li>
                    }
                    else
                    {
                        <li><a href="~/Shipper?page=@i&searchValue=@ViewBag.SearchValue">@i</a></li>
                    }

                }
            </ul>
        </div>
    </div>
</div>
</body>
</html>


