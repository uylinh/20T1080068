@model _20T1080068.DomainModels.Custommer
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Custommer/Delete/@Model.CustommerID" method="post">

            <div class="form-group">
                <label class="control-label col-sm-2">Tên khách hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.CustommerName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Tên liên hệ:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ContactName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ email:</label>
                <p class="form-control-static">@Model.Email</p>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Quốc gia:</label>
                <p class="form-control-static">@Model.Country</p>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Tỉnh/Thành phố:</label>
                <p class="form-control-static">@Model.City</p>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ:</label>
                <p class="form-control-static">@Model.Address</p>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mã bưu chính:</label>
                <p class="form-control-static">@Model.PostalCode</p>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10 text-right">

                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash" style="margin-right: 2px;"></i> Xoá dữ liệu
                    </button>

                    <a href="~/Custommer" class="btn btn-default">
                        Quay lại
                    </a>

                </div>
            </div>
        </form>
    </div>
</div>