@model _20T1080068.DomainModels.Category
@{
    //ViewBag.Title = "Xoá loại hàng";
    Layout = null;
}


<!-- Hiển thị nổi -->
<div class="modal fade" id="deleteCategoryModal-@Model.CategoryID" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <a class="close" data-dismiss="modal">&times;</a>
                <h4 class="modal-title">@ViewBag.Title</h4>
            </div>
            <form action="~/Category/Delete/@Model.CategoryID" method="post">
                <div class="modal-body">

                    <div class="form-group">
                        <label class="control-label">Tên loại hàng:</label>
                        <p class="form-control-static">@Model.CategoryName</p>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Mô tả:</label>
                        <p class="form-control-static">@Model.Description</p>
                    </div>

                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10 text-right">

                            <button type="submit" class="btn btn-danger">
                                <i class="fa fa-trash" style="margin-right: 2px;"></i> Xoá dữ liệu
                            </button>

                            <a class="btn btn-default" data-dismiss="modal">
                                Quay lại
                            </a>

                        </div>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>